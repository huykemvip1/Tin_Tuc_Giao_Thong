<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/dangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Đăng Nhập"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/ic_dangnhap"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_below="@+id/dangnhap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_dangnhap" />

    <EditText
        android:id="@+id/login_username"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ic_dangnhap"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bd_input"
        android:drawableLeft="@drawable/ic_username"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ic_dangnhap"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bd_input"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <LinearLayout
        android:id="@+id/bg_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_dangnhap"
        android:layout_marginTop="210dp"
        android:paddingLeft="80dp">

        <Button
            android:id="@+id/bt_dangnhap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="60dp"
            android:background="@drawable/bg_btn_color"
            android:padding="10dp"
            android:text="Đăng Nhập"
            android:textAlignment="center" />

        <Button
            android:id="@+id/bt_dangky"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_color"
            android:padding="20dp"
            android:text="Đăng Ký"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="forgotAccount"
        android:text="Forgot Account ?"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:clickable="true"/>
</RelativeLayout>