<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotAccount"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/text_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Forgot Account"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/image_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_forgot_account" />

    <EditText
        android:id="@+id/fg_username"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@+id/image_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bd_input"
        android:drawableLeft="@drawable/ic_username"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/fg_email"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@+id/image_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bd_input"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:hint="huy123@gmail.com"
        android:inputType="text" />

    <TextView
        android:id="@+id/fg_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:text="Sent Successfully !!!"
        android:textColor="@color/reptile_green"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_dangky"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/bg_btn_color"
        android:onClick="findAccount"
        android:padding="20dp"
        android:text="Send"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:onClick="returnLogin"
        android:text="Quay về Đăng Nhập"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:clickable="true"/>
</RelativeLayout>