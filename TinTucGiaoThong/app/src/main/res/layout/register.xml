<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisterActivity">
    <TextView
        android:id="@+id/dangky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Đăng Ký"
        android:textColor="@color/white"
        android:textSize="50dp" />


    <EditText
        android:id="@+id/username"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@+id/dangky"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bd_input"
        android:drawableLeft="@drawable/ic_username"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/password"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@+id/dangky"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bd_input"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_password_re_enter"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@+id/dangky"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bd_input"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:hint="Re-enter password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@+id/dangky"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bd_input"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:hint="huy123@gmail.com"
        android:inputType="text" />

    <TextView
        android:id="@+id/register_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dangky"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="375dp"
        android:text="Registry Successfully !!"
        android:textColor="@color/reptile_green"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <RadioGroup
        android:id="@+id/sex"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dangky"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp">

        <RadioButton
            android:id="@+id/nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/nu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-32dp"
            android:text="Nữ" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dangky"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp">

        <Button
            android:id="@+id/bt_dangky"
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_color"
            android:onClick="addUser"
            android:padding="20dp"
            android:text="Đăng Ký"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/backLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dangky"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:text="@string/backHome"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>