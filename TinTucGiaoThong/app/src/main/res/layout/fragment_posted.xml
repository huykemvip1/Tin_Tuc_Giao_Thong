<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/posted_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/posted_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="-1dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_username" />

        <ImageButton
            android:id="@+id/posted_details"
            android:layout_width="86dp"
            android:layout_height="5dp"
            android:layout_above="@+id/posted_delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="108dp"
            android:layout_toRightOf="@id/posted_image"
            android:background="@drawable/bg_btn_color"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_infor"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/posted_delete"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_below="@id/posted_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="-84dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@+id/posted_image"
            android:background="@drawable/bg_btn_color"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>